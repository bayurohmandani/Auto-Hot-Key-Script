F9::
{
    Clipboard := ""
    Send ^c
    ClipWait
    clipboard3 := Clipboard
}

; Paste1 - F10
F10::
{
    SendInput %clipboard1%
}

; Paste2 - F11
F11::
{
    SendInput %clipboard2%
}

; Paste3 - F12

; === MENU KLIK KANAN ===
Menu, MyMenu, Add, Copy Referensi, CopyReferensi
Menu, MyMenu, Add, Copy Nama, CopyNama
Menu, MyMenu, Add, Copy Alamat, CopyAlamat
Menu, MyMenu, Add
Menu, MyMenu, Add, Paste Referensi, PasteReferensi
Menu, MyMenu, Add, Paste Nama, PasteNama
Menu, MyMenu, Add, Paste Alamat, PasteAlamat

~RButton::
{
    MouseGetPos, xpos, ypos
    Menu, MyMenu, Show, %xpos%, %ypos%
    return
}

; === COPY DARI MENU ===
CopyReferensi:
{
    Clipboard := ""
    Send ^c
    ClipWait
    referensi := Clipboard
    TrayTip, Copy Berhasil, Referensi telah disalin., 1
    return
}

CopyNama:
{
    Clipboard := ""
    Send ^c
    ClipWait
    nama := Clipboard
    TrayTip, Copy Berhasil, Nama telah disalin., 1
    return
}

CopyAlamat:
{
    Clipboard := ""
    Send ^c
    ClipWait
    alamat := Clipboard
    TrayTip, Copy Berhasil, Alamat telah disalin., 1
    return
}

; === PASTE DARI MENU ===
PasteReferensi:
{
    SendInput %referensi%
    return
}

PasteNama:
{
    SendInput %nama%
    return
}

PasteAlamat:
{
    SendInput %alamat%
    return
}

; === COPY DENGAN F7–F9 ===
F7::
{
    Clipboard := ""
    Send ^c
    ClipWait
    referensi := Clipboard
    TrayTip, Copy Berhasil, Referensi (F7) telah disalin., 1
    return
}

F8::
{
    Clipboard := ""
    Send ^c
    ClipWait
    nama := Clipboard
    TrayTip, Copy Berhasil, Nama (F8) telah disalin., 1
    return
}

F9::
{
    Clipboard := ""
    Send ^c
    ClipWait
    alamat := Clipboard
    TrayTip, Copy Berhasil, Alamat (F9) telah disalin., 1
    return
}

; === PASTE DENGAN F10–F12 ===
F10::
{
    SendInput %referensi%
    return
}

F11::
{
    SendInput %nama%
    return
}

F12::
{
    SendInput %alamat%
    return
}
 
